<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onbroadingAct">


    <Button
        android:id="@+id/btn_Daftar"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="25dp"
        android:fontFamily="@font/roboto"
        android:background="@drawable/bg_buttom2"
        android:includeFontPadding="true"
        android:text="@string/daftar"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_indicator" />

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/bg_buttom1"
        android:text="@string/masuk"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto"
        android:textColor="@color/btnmasuk"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_indicator" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/screen_viwpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.719"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_indicator"
        android:layout_width="56dp"
        android:layout_height="10dp"
        android:layout_marginTop="450dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabBackground="@drawable/indicator_selector"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="16dp">


    </com.google.android.material.tabs.TabLayout>

    <TextView
        android:id="@+id/lewati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Lewati"
        android:textColor="@color/btn_bg_blue"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginRight="24dp"
        android:textSize="16sp"
         app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="43dp"
        android:background="#141414"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_masuk" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="1dp"
        android:text="Lanjutkan Dengan"
        android:textColor="#666666"
        android:textSize="16dp"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toStartOf="@+id/view2"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/btn_Daftar" />

    <View
        android:id="@+id/view2"
        android:layout_width="70dp"
        android:layout_height="1dp"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="25dp"
        android:background="#141414"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Daftar" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/fb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/btn_google"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="114dp"
        android:background="@drawable/google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_facebook"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />


</androidx.constraintlayout.widget.ConstraintLayout>